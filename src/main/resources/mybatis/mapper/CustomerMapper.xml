<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miracle.dao.CustomerDao" >

    <resultMap id="getOrdersByCId" type="Customer" >
        <id column="id" property="id" javaType="java.lang.Integer" />
        <result column="name" property="name" javaType="java.lang.String" />
        <result column="age" property="age" javaType="java.lang.Integer" />
        <collection property="orderList" ofType="Order">
            <id column="oid" property="id" javaType="java.lang.Integer" />
            <result column="price" property="price" javaType="java.lang.Integer" />
            <result column="cid" property="cid" javaType="java.lang.Integer" />
        </collection>
    </resultMap>


    <select id="getOrdersByCId" parameterType="int" resultMap="getOrdersByCId">
        SELECT c.id id,c.`name` name,c.age age ,o.id oid,o.cid cid,o.price price from customer c LEFT JOIN `order` o on c.id = o.cid where cid = #{id}
    </select>

    <select id="getAllCustomer" parameterType="int" resultMap="getOrdersByCId">
        SELECT c.id id,c.`name` name,c.age age ,o.id oid,o.cid cid,o.price price from customer c LEFT JOIN `order` o on c.id = o.cid
    </select>

</mapper>
